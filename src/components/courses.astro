<style>
  section {
    margin: 8% 30px;
  }
  main {
    margin: 8% 0;
    max-height: 100%;
    width: 100%;
    background-image: url("/img/courses.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 30px;
    padding: 30px;
  }
  main h3 {
    position: relative;
    font-size: 60px;
    color: var(--white);
  }
  .cursos {
    position: relative;
    background-color: var(--white);
    box-shadow: var(--shadow);
    width: 100%;
    border-radius: 15px;
    padding: 20px;
  }
  .cursos header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .group {
    display: flex;
    line-height: 28px;
    align-items: center;
    position: relative;
    width: 85%;
  }

  .input {
    width: 100%;
    height: 40px;
    line-height: 28px;
    padding: 0 1rem;
    padding-left: 2.5rem;
    border: 2px solid transparent;
    border-radius: 8px;
    outline: none;
    background-color: #f3f3f4;
    color: var(--caoba);
    transition: 0.3s ease;
  }

  .input::placeholder {
    color: #;
  }

  .input:focus,
  input:hover {
    outline: none;
    border-color: rgba(73, 53, 0, 0.4);
    background-color: transparent;
    box-shadow: 0 0 0 4px rgba(73, 56, 0, 0.1);
  }

  .icon {
    position: absolute;
    left: 1rem;
    fill: var(--gold);
    width: 1rem;
    height: 1rem;
  }

  article h4 {
    font-size: 35px;
    color: var(--caoba);
  }
  .cuerpo_cursos {
    margin: 20px 0;
    background-color: var(--white);
    padding: 20px;
    box-shadow: var(--shadow);
    border-radius: 8px;
  }
  /* Estilos para dispositivos mÃ³viles */
  @media only screen and (max-width: 600px) {
    section {
      flex-direction: column;
      text-align: center;
      padding: 10px 15px;
      margin: 35% 0 0;
    }
    main h3 {
      font-size: 45px;
      margin-bottom: 20px;
    }
    header {
      flex-direction: column;
      width: 100%;
    }
    .group {
      width: 100%;
      margin-bottom: 10px;
    }

    article h4 {
      font-size: 23px;
    }
    article p {
      font-size: 14px;
    }
  }
</style>

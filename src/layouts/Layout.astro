---
import Footer from "../components/footer.astro";
import Derechos from "../components/derechos.astro"
 
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="somos una empresa internacional manejamos técnicas profesionales de pintura automotriz, pinturas especiales, hidrocromo, hidrografía" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/logo.png" />
    <script src="https://kit.fontawesome.com/db59255a97.js" crossorigin="anonymous"is:inline></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"is:inline></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"is:inline></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
   
  </body>
  <script>

document.addEventListener("DOMContentLoaded", function() {
    window.addEventListener("scroll", function () {
      const header = document.querySelector("header");
      if (header) {
        header.classList.toggle("abajo", window.scrollY > 0);
      }
    });
  });
  </script>
</html>

<style is:global>
  :root {
    --gold: #c7a438;
    --black: #1e1e1e;
    --caoba: #13151a;
    --white: #ededed;
    --white-gray: #d9d9d9;
    --shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--white);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>

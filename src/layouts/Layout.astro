---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Derechos from "../components/derechos.astro"
import Ads from "../components/ads.astro"
 
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="somos una empresa internacional manejamos técnicas profesionales de pintura automotriz, pinturas especiales, hidrocromo, hidrografía" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/logo.png" />
    <script src="https://kit.fontawesome.com/db59255a97.js" crossorigin="anonymous"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
    <Derechos />
  </body>
</html>

<style is:global>
  :root {
    --gold: #c7a438;
    --black: #1e1e1e;
    --caoba: #13151a;
    --white: #ededed;
    --white-gray: #d9d9d9;
    --shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--white);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
